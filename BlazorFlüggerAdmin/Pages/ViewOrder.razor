@page "/ViewOrder"
@using Domain.Models

<h3>View Orders</h3>

@if (orders == null)
{
    <p>No orders to display</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Order ID</th>
            <th>Order creation date</th>
            <th>Delivery Method</th>
            <th>Customer</th>
            <th>Products</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in orders)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.PurchaseDate</td>
                <td>@item.DeliveryMethod</td>
                <td>@item.Customer</td>
                <td>@item.Products</td>
            </tr>
        }
        </tbody>
    </table>
}
@if (!string.IsNullOrEmpty(msg))
{
    <label style="color: red">@msg</label>
}

